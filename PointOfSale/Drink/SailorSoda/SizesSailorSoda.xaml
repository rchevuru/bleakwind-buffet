<UserControl x:Class="PointOfSale.SizesSailorSoda"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row ="0" Click ="switchToCustomSailorSodaChoice" Name ="Small" Height="100" FontSize="20">Small</Button>
        <Button Grid.Row ="1" Click ="switchToCustomSailorSodaChoice" Name ="Medium" Height="100" FontSize="20">Medium</Button>
        <Button Grid.Row ="2" Click ="switchToCustomSailorSodaChoice" Name ="Large" Height="100" FontSize="20">Large</Button>
        <Button Grid.Row ="3" Click ="switchToFlavorChoices" Name="BacktoDrinksButt" Height="100" FontSize="20" FontWeight="Black">Back</Button>
    </Grid>
</UserControl>
