<UserControl x:Class="PointOfSale.CustomThalmorTriple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            </Grid.RowDefinitions>
        <CheckBox IsChecked="{Binding Path= Bun}" Grid.Row ="0" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Bun
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Ketchup}" Grid.Row ="1" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Ketchup
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Mustard}" Grid.Row ="2" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Mustard
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Pickle}" Grid.Row="3" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Pickle
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Cheese}" Grid.Row="4" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Cheese
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Tomato}" Grid.Row="5" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Tomato
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Lettuce}" Grid.Row="6" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Lettuce
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Mayo}" Grid.Row="7" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Mayo
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Bacon}" Grid.Row="8" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
            Bacon
        </CheckBox>
        <CheckBox IsChecked="{Binding Path= Egg}" Grid.Row="9" FontSize="20">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.5"/>
            </CheckBox.LayoutTransform>
            Egg
        </CheckBox>
        <Button Grid.Row="10" FontSize="18" Click="switchToEntreeChoices" FontWeight ="Black">Done</Button>
    </Grid>
</UserControl>
